<mvc:View controllerName="egb.employeeui5.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox>
                            <Label id="labelEmployee" labelFor="inputEmployee" 
                                   text="{i18n>labelEmployee}" 
                                   class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" maxLength="6" width="200px"
                                    class="sapUiSmallMarginEnd"
                                    value="{/EmployeeId}"
                                    />
                            <Label id="labelCountry" labelFor="slCountry" 
                                    text="{i18n>labelCountry}" class="sapUiSmallMargin"
                                    visible="true"/>
                            <Select id="slCountry" forceSelection="false" 
                                    selectedKey="{/CountryKey}" visible="true"
                                    items="{/ListCountry}"
                                    class="sapUiSmallMarginEnd">
                                <items>
                                    <core:Item key="{Key}" text="{Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter"
                                    class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter"
                                    class="sapUiSmallMarginEnd"/>
                        
                        </HBox>
                        <HBox >
                            <Panel>
                                <Table id="tableEmployee" items="{/Employees}">
                                    <columns>
                                        <Column>
                                            <Label text="{i18n>tableId}"/>
                                        </Column>
                                        <Column>
                                            <Label text="{i18n>tableName}"/>
                                        </Column>
                                        <Column>
                                            <Label text="{i18n>tableCountry}"/>
                                        </Column>
                                        <Column>
                                            <Label text="{i18n>tableCity}"/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName}, {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
