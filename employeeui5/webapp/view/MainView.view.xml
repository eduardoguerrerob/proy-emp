<mvc:View controllerName="egb.employeeui5.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox>
                            <Label id="labelEmployee" labelFor="inputEmployee" 
                                   text="{i18n>labelEmployee}" 
                                   class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" maxLength="6" width="200px"
                                    class="sapUiSmallMarginEnd"
                                    value="{jsonCountries>/EmployeeId}"
                                    />
                            <Label id="labelCountry" labelFor="slCountry" 
                                    text="{i18n>labelCountry}" class="sapUiSmallMargin"
                                    visible="true"/>
                            <Select id="slCountry" forceSelection="false" 
                                    selectedKey="{jsonCountries>/CountryKey}" visible="true"
                                    items="{jsonCountries>/ListCountry}"
                                    class="sapUiSmallMarginEnd">
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter"
                                    class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter"
                                    class="sapUiSmallMarginEnd"/>
                        
                        </HBox>
                        <HBox >
                            <Panel>
                                <Button id="btnShowCity" text="{i18n>showCity}" 
                                        visible="{jsonConfig>/visibleBtnShowCity}" press="onShowCity"/>
                                <Button id="btnHideCity" text="{i18n>hideCity}" 
                                        visible="{jsonConfig>/visibleBtnHideCity}" press="onHideCity"/>
                                <Table id="tableEmployee" items="{jsonEmployees>/}">
                                    <columns>
                                        <Column visible="{jsonConfig>/visibleID}">
                                            <Label text="{i18n>tableId}"/>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleName}">
                                            <Label text="{i18n>tableName}"/>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleCountry}">
                                            <Label text="{i18n>tableCountry}"/>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleCity}">
                                            <Label text="{i18n>tableCity}"/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
