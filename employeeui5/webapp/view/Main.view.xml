<mvc:View controllerName="egb.employeeui5.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayouts>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView" viewName="egb.employeeui5.view.MasterEmployee"/>
                            </f:beginColumnPages>

                            <f:midColumnPages>
                                <mvc:XMLView id="detailsEmployeeView" viewName="egb.employeeui5.view.EmployeeDetails"/>
                            </f:midColumnPages>

                            <f:endColumnPages>
                                <Page ></Page>
                            </f:endColumnPages>

                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar>
                            <Label text="layout" class="sapUiSmallMargin"/>
                            <Select items="{jsonLayouts>/Layout}" selectedKey="{jsonLayouts>/ActiveKey}">
                                <core:Item key="{jsonLayouts>Key}" text="{jsonLayouts>Text}"/>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>